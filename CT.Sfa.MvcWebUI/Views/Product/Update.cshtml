@model CT.Sfa.MvcWebUI.Models.ProductUpdateViewModel
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/_Layout.cshtml";
}

<h1>Update</h1>

<form asp-controller="Product" asp-action="Update" method="post">
    <div class="form-group">
        <label asp-for="Product.ProductName"></label>
        <input asp-for="Product.ProductName" class="form-control" placeholder="Product Name" />
        <span asp-validation-for="Product.ProductName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.ProductNo"></label>
        <input asp-for="Product.ProductNo" class="form-control" placeholder="Product No" />
        <span asp-validation-for="Product.ProductNo"></span>
    </div>
    <input type="hidden" asp-for="Product.ProductId" />
    <input type="submit" value="Update" class="btn btn-xs btn-success" />
</form>